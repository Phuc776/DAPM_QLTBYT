@model DAPM_QLTBYT.Models.Chitietphieuyeucaunhap

@{
    ViewData["Title"] = "DeleteChiTiet";
    Layout = "~/Areas/TruongKhoa/Views/_TruongKhoaLayout.cshtml";
}

<h1>DeleteChiTiet</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Chitietphieuyeucaunhap</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Số lượng yêu cầu
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SoLuongYeuCau)
        </dd>
        
        <dt class = "col-sm-2">
            Lý do
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LyDo)
        </dd>
        <dt class = "col-sm-2">
            Mã phiếu
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MaPhieuNavigation.MaPhieu)
        </dd>
        <dt class = "col-sm-2">
            Mã thiết bị
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MaTbNavigation.MaTb)
        </dd>
        <dt class="col-sm-2">
            Tên thiết bị
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaTbNavigation.TenTb)
        </dd>
    </dl>
    
    <form asp-action="DeleteChiTiet">
        <input type="hidden" asp-for="MaPhieu" />
        <input type="hidden" asp-for="MaTb" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="EditDetails" asp-route-id="@Model.MaPhieu">Quay lại</a>
    </form>
</div>
