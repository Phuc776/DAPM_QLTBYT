@model DAPM_QLTBYT.Models.Phieuyeucaunhap

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/TruongKhoa/Views/_TruongKhoaLayout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Phieuyeucaunhap</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Mã phiếu
        </dt>
        <dd class="col-sm-10">
            @Model.MaPhieu
        </dd>
        <dt class="col-sm-2">
            Mã khoa
        </dt>
        <dd class="col-sm-10">
            @Model.MaKhoa
        </dd>
        <dt class="col-sm-2">
            Mã người tạo
        </dt>
        <dd class="col-sm-10">
            @Model.MaNguoiTao
        </dd>
        <dt class="col-sm-2">
            Ngày tạo
        </dt>
        <dd class="col-sm-10">
            @Model.NgayTao
        </dd>
    </dl>
</div>

<div>
    <a href="@Url.Action("AddChiTiet", new {id = Model.MaPhieu})" class="btn btn-primary">Thêm chi tiết phiếu nhập</a>
</div>

<h4 class="mb-3">Danh sách chi tiết phiếu nhập</h4>
@if (ViewBag.errMessage != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.errMessage
    </div>
}
<table class="table">
    <thead>
        <tr>
            <th>
                Mã thiết bị
            </th>
            <th>
                Tên thiết bị
            </th>
            <th>
                Hình ảnh
            </th>
            <th>
                Số lượng yêu cầu
            </th>
            <th>
                Số lượng duyệt
            </th>
            <th>
                Lý do
            </th>
            <th>
                Hành động
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Chitietphieuyeucaunhaps)
        {
            <tr>
                <td>
                    @item.MaTb
                </td>
                <td>
                    @item.MaTbNavigation.TenTb
                </td>
                <td>
                    <img style="max-width: 200px; max-height: 200px;" src="~/assets/img/@item.MaTbNavigation.HinhAnh" /> 
                </td>
                <td>
                    @item.SoLuongYeuCau
                </td>
                <td>
                    @item.SoLuongDuyet
                </td>
                <td>
                    @item.LyDo
                </td>
                <td>
                    <a href="@Url.Action("EditChiTiet", new {id = item.MaPhieu, maTb = item.MaTb})" class="btn btn-primary">Sửa</a>
                    <a href="@Url.Action("DeleteChiTiet", new {id = item.MaPhieu, maTb = item.MaTb})" class="btn btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Index" class="btn btn-primary">Xác nhận</a>
</div>