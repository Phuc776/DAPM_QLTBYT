@model DAPM_QLTBYT.Models.Phieuyeucaunhap

@{
    ViewData["Title"] = "XemCTPN";
    Layout = "~/Areas/TruongKhoa/Views/_TruongKhoaLayout.cshtml";
}

<h1>Xem Chi Tiết Phiếu Nhập</h1>

<div>
    <h4>Phiếu yêu cầu nhập</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Mã phiếu
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaPhieu)
        </dd>
        <dt class = "col-sm-2">
            Ngày tạo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NgayTao)
        </dd>
        <dt class = "col-sm-2">
            Ngày duyệt
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NgayDuyet)
        </dd>
        <dt class = "col-sm-2">
            Ngày xác nhận
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NgayXacNhan)
        </dd>
        <dt class = "col-sm-2">
            Trạng thái
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TrangThai)
        </dd>
        <dt class = "col-sm-2">
            Mã khoa
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MaKhoaNavigation.MaKhoa)
        </dd>
        <dt class = "col-sm-2">
            Mã người duyệt
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MaNguoiDuyetNavigation.MaNd)
        </dd>
        <dt class = "col-sm-2">
            Mã người tạo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MaNguoiTaoNavigation.MaNd)
        </dd>
        <dt class = "col-sm-2">
            Mã người xác nhận
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MaNguoiXacNhanNavigation.MaNd)
        </dd>
    </dl>
</div>

<h4>Chi tiết phiếu yêu cầu nhập</h4>
<table class="table">
    <thead>
        <tr>
            <th>Mã thiết bị</th>
            <th>Tên thiết bị</th>
            <th>Số lượng yêu cầu</th>
            <th>Số lượng duyệt</th>
            <th>Lý do</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Chitietphieuyeucaunhaps)
        {
            <tr>
                <td>@item.MaTb</td>
                <td>@item.MaTbNavigation.TenTb</td>
                <td>@item.SoLuongYeuCau</td>
                <td>@item.SoLuongDuyet</td>
                <td>@item.LyDo</td>
            </tr>
        }
    </tbody>
</table>

<div class="text-center mt-4">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
